<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="50dp">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="32sp" />

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonNum7"
            style="@style/CalculatorButton"
            android:text="7" />

        <Button
            android:id="@+id/buttonNum8"
            style="@style/CalculatorButton"
            android:text="8" />

        <Button
            android:id="@+id/buttonNum9"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            android:id="@+id/buttonNumDivide"
            style="@style/CalculatorButton"
            android:text="/" />

        <Button
            android:id="@+id/buttonNum4"
            style="@style/CalculatorButton"
            android:text="4" />

        <Button
            android:id="@+id/buttonNum5"
            style="@style/CalculatorButton"
            android:text="5" />

        <Button
            android:id="@+id/buttonNum6"
            style="@style/CalculatorButton"
            android:text="6" />

        <Button
            android:id="@+id/buttonNumMultiply"
            style="@style/CalculatorButton"
            android:text="*" />

        <Button
            android:id="@+id/buttonNum1"
            style="@style/CalculatorButton"
            android:text="1" />

        <Button
            android:id="@+id/buttonNum2"
            style="@style/CalculatorButton"
            android:text="2" />

        <Button
            android:id="@+id/buttonNum3"
            style="@style/CalculatorButton"
            android:text="3" />

        <Button
            android:id="@+id/buttonNumSubtract"
            style="@style/CalculatorButton"
            android:text="-" />

        <Button
            android:id="@+id/buttonNum0"
            style="@style/CalculatorButton"
            android:layout_columnSpan="2"
            android:text="0" />

        <Button
            android:id="@+id/buttonNumDot"
            style="@style/CalculatorButton"
            android:text="." />

        <Button
            android:id="@+id/buttonNumAdd"
            style="@style/CalculatorButton"
            android:text="+" />

        <Button
            android:id="@+id/buttonNumEquals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:background="#3a85fc"
            android:gravity="center"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:background="#3a85fc"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Очистить"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </GridLayout>
</LinearLayout>
